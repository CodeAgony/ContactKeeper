{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["wesbos", "plugin:react/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
		"import/no-extraneous-dependencies": 0
	}
}
