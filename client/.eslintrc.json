{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "prettier",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react",
        "prettier",
        "react-hooks"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "import/no-extraneous-dependencies": 0,
        "react/jsx-indent": [
            1,
            "tab"
        ],
        "react/jsx-indent-props": [
            2,
            "tab"
        ],
        "react/jsx-filename-extension": 0,
        "indent": [
            2,
            "tab"
        ]
    }
}